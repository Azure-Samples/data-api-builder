{
  "$schema": "https://dataapibuilder.azureedge.net/schemas/v0.4.11-alpha/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "Server=localhost;Database=DAB_Todo;User ID=dab_test_user;Password=lw1E-0k1A]6Ko1;TrustServerCertificate=true"
  },
  "runtime": {
    "rest": {
      "path": "/v1"
    },
    "graphql": {
      "path": "/graphql"
    },
    "host": {
      "mode": "development",      
      "cors": {
        "origins": [ "http://localhost:4280", "http://127.0.0.1:5173" ],
        "allow-credentials": true
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Todo": {
      "source": "dbo.todos",
      "rest": {
        "path": "todo"
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*",
              "policy": {
                "database": "@item.owner_id eq 'public'"
              }
            }            
          ]
        },
        {
          "role": "authenticated",
          "actions": [
            {
              "action": "*",
              "policy": {
                "database": "@item.owner_id eq @claims.userId"
              }
            }            
          ]
        }
      ]
    }
  }
}