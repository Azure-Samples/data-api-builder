{
    "$schema": "hawaii.draft-01.schema.json",
    "data-source": {
        "database-type": "mssql",
        "connection-string": "Server=localhost;Database=HawaiiTest;User ID=sa;Password=Passw0rd!;TrustServerCertificate=true"
    },
    "runtime": {
        "host": {
            "mode": "development"
        },
        "rest": {
            "enabled": true
        },
        "graphql": {
            "enabled": true
        }
    },
    "entities": {
        "Todo": {
            "source": "s002.todos",
            "relationships": {
                "category": {
                    "cardinality": "one",                    
                    "target.entity": "Category"                    
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": [
                        "*"
                    ]
                }
            ]
        },
        "Category": {
            "source": "s002.categories",
            "relationships": {
                "todos": {
                    "cardinality": "many",                    
                    "target.entity": "Todo"
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": [
                        "*"
                    ]
                }
            ]
        }
    }
}
